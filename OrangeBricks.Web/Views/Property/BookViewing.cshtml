@model OrangeBricks.Web.Controllers.Property.ViewModels.BookViewingViewModel

@{
    ViewBag.Title = "Book Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Viewing</h2>

<p>When would you like to book a viewing for the  @Model.PropertyType property on @Model.StreetName?</p>

@using (Html.BeginForm("BookViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ViewingAtDate, "Viewing Date:", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ViewingAtDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Viewing Date", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.ViewingAtDate, "", new { @class = "text-danger" })
        </div>  
        @Html.LabelFor(model => model.ViewingAtTime, "Viewing Time:", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ViewingAtTime)
            @Html.ValidationMessageFor(model => model.ViewingAtTime)
        </div>
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.PropertyId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Book" />
        </div>
    </div>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                monthRange: "-0:+2",
                yearRange: "-0:+1"
            });
        });
    </script>
}
